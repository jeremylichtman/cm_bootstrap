<section class="jumbotron-featured" style="background:url( {{ jumbotron_featured.img.src }} );">
  <div class="jumbotron-featured__overlay" style="background:rgba({{ jumbotron_featured.overlay_color }}, {{ jumbotron_featured.overlay_opacity }});">
    <div class="jumbotron-featured__overlay-content">

      <div class="jumbotron-featured__overlay-left sm-100 md-60">
        <h1 class="jumbotron-featured__title text-3 white">{{ jumbotron_featured.title }}</h1>
        <div class="jumbotron-featured__sub-title text-2 white">
          {{ jumbotron_featured.sub_title }}
        </div>
        <div class="jumbotron-featured__button">
          <a href="#">More Info</a>
        </div>
      </div>

      <div class="jumbotron-featured__overlay-right sm-100 md-40 bg-white">
        <h2 class="center">This Week @ PhillyCAM</h2>
        <ul class="jumbotron-featured__items">
          {% for item in jumbotron_featured.items %}
            <li class="jumbotron-featured__item">
              <span class="jumbotron-featured__item-icon vertical-center">
                <i class="icon icon-calendar"></i>
              </span>
              <div class="jumbotron-featured__item-right">
                <h3 class="jumbotron-featured__item-title">
                  {{ item.title }}
                </h3>
                <div class="jumbotron-featured__item-label">
                  {{ item.label }}
                </div>
                <div class="jumbotron-featured__item-datetime">
                  {{ item.datetime }}
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
        <div class="jumbotron-featured__items-button">
          <a href="#">Show All Events</a>
        </div>
      </div>

    </div>
  </div>
</section>
